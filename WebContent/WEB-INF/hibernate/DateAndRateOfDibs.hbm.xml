<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.luxoft.cantor.repository">

	<class name="DateAndRateOfDibs" table="DATE_AND_RATE_OF_DIBS">
		<one-to-many class="com.luxoft.cantor.repository.Dibs" />
		<id column="dibsDate" />
		<property name="dibsRate" type="java.math.BigDecimal" />
		<many-to-one name="stock" class="com.luxoft.cantor.repository.Dibs" fetch="select">
            <column name="dibsCode" not-null="true" />
        </many-to-one>
	</class>

</hibernate-mapping>